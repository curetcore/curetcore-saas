# Frontend Environment Variables
NEXT_PUBLIC_API_URL=https://api.curetcore.com
NEXT_PUBLIC_APP_NAME=CuretCore
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_COMPANY_NAME=Curetshop
NEXT_PUBLIC_REFRESH_INTERVAL=300000

# Backend Environment Variables
NODE_ENV=production
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:password@host:5432/database?sslmode=disable
DATABASE_SSL=false

# JWT Configuration
JWT_SECRET=generate-with-openssl-rand-base64-32
JWT_REFRESH_SECRET=generate-with-openssl-rand-base64-32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://redis:6379

# CORS
CORS_ORIGIN=https://core.curetcore.com

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Optional: Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Optional: Email Service
EMAIL_SERVICE=resend
RESEND_API_KEY=

# Optional: Analytics
GA_MEASUREMENT_ID=